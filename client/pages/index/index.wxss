/* pages/play/play.wxss */
@import '../../src/weui.wxss';

.image_icon{
  width: 70rpx;
  height: 70rpx;
}

.icon_bar{
  width: 750rpx;
  height: 60rpx;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between;
  display: flex;
  flex-direction: row
}

.cover{
  width: 500rpx;
  height: 500rpx;
  border-radius: 50%;
}

.container1 {
  width: 100vvh;
  height:95vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.swiper_cover_lyric{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.swiper{
  width: 750rpx;
  height: 600rpx;
}

.container_swiper{
  width: 750rpx;
  height: 100vh;
}

.song-list{
	background: #000;
}
.song-item{
	display: flex;
	font-size: 36rpx;
	color: #fff;
	padding-left: 20rpx;
}
.song-number{
	flex: none;
	display: block;
	margin-right: 20rpx;
	padding-top: 10rpx;
	width: 60rpx;
	text-align: center;
}
.song-body{
	position: relative;
	flex: auto;
	padding: 10rpx 30rpx 10rpx 0;
	border-bottom: 1px solid rgba(255,255,255,.15);
	overflow: hidden;
}
.song-tit,
.song-desc{
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.song-tit{
	display: block;
}
.song-desc{
	display: block;
	color: rgba(255,255,255,.6);
	font-size: 28rpx;
}
.song-desc text:not(:first-of-type):not(:last-of-type):before{
  content: '/';
  margin: 0 8rpx;
}

.song-list.light .song-item{
	color: #000;
}
.song-list.light .song-desc{
	color: grey;
}
.song-list.light .song-body{
	border-bottom-color: rgba(0,0,0,.15);
}
.middle-r {
    display: inline-block;
    vertical-align: top;
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.lyric-wrapper{
    width: 80%;
    margin: 0 auto;
    overflow: hidden;
    text-align: center;
    height: 100%;
}
.text{
    line-height: 32px;
    color: rgba(0, 0, 0, 0.5);
    font-size: 14px;
}
.current {
    color: #ffcd32;
}
.currentLyricWrapper {
    height:70rpx;
    font-size:12px;
    position:absolute;
    bottom:-80rpx;
    line-height: 70rpx;
    text-align: center;
    width: 100%;
    color: #ffcd32;
}