<view class="page">
    <view class="page__bd">
        <!--//歌曲信息-->
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view>
                    <view class="weui-cell__hd">
                        <image src="{{songImg}}" style="margin-right: 5px;vertical-align: middle;width:100px; height: 100px;"></image>
                    </view>
                </view>
                <view>
                    <view class="userinfo-nickname">{{musicName}}</view>
                    <view class="userinfo-vice-nickname">歌手</view>
                </view>
                
            </view>
        </view>
        <!--加载中--><scroll-view style='height:10000rpx'>
        <view wx:for="{{commentList}}"  class="music">
              <view class="former-music" >
              </view>
              <view id='{{item.MusiclistId}}' bindtap='playSong' data-musicid="{{item.MusicId}}" class="music-item"  >
                 {{index+1}}:{{item.Content}} 
              </view>
              <text class="likeNum">{{item.Likes}}</text>
              <image wx:if="{{item.IsLike==false}}" src="../../src/like.png"  data-Likes="{{item.Likes}}" data-IsLike="{{item.IsLike}}"  bindtap='like' data-idx='{{index}}' data-id='{{item.CommentId}}' class="delete-item"></image>
              <image wx:else  src="../../src/dislike.png" data-Likes="{{item.Likes}}" data-IsLike="{{item.IsLike}}"  bindtap="delLike" data-idx='{{index}}' data-id='{{item.CommentId}}' class="delete-item"></image>
        </view>
        </scroll-view>

        <!--输入评论-->
            <view class="search-header">
                <view class="input-box">
                    <image class="icon" src="http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/search2-2fb94833aa.png"></image>
                    <input class="keyword" placeholder="请输入评论" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" bindconfirm='insertComment'/>
                    <image class="del" wx:if="{{inputVal.length > 0}}" bindtap="clearInput" src="http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/clearIpt-f71b83e3c2.png"></image>
                </view>
                <label class="weui-search-bar__label" hidden="{{inputShowed}}" bindtap="showInput">
                    <view class="weui-search-bar__text">请输入评论</view>
                </label>
                <view class="right" hidden="{{!inputShowed}}" bindtap="insertComment">发表</view>
            </view>
            

              <view class="search-header">
                <view class="input-box">
                  <image class="icon" src="http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/search2-2fb94833aa.png"></image>
                  <input name="input" class="keywrod" focus="true" value="{{keyword}}" confirm-type="search" bindinput="inputChange" bindfocus="inputFocus" bindconfirm="onKeywordConfirm" confirm-type="search" placeholder="请输入评论" />
                  <image class="del" wx:if="{{inputVal.length > 0}}" bindtap="clearInput" src="http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/clearIpt-f71b83e3c2.png"></image>
                </view>
                <view class="right" bindtap="closeSearch">取消</view>
              </view>
            

    </view>
</view>